---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/reviews', label: 'Reviews' },
  { href: '/experts', label: 'Experts' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-[#B22222] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-[#FFD700]">Porky Pie Pros</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-[#FFD700] font-bold transition-colors duration-300"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-[#FFD700] font-bold py-2 transition-colors duration-300"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>