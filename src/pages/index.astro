---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Welcome to Porky Pie Pros";
const pageDescription = "Discover expert insights, recipes, and tips for crafting the perfect artisanal porky pies. Dive into bold, flavorful worlds of culinary mastery.";

const features = [
  {
    title: "Rich, Savory Fillings",
    description: "From classic pork and apple to exotic spiced blends, discover recipes that burst with flavor.",
    icon: "fas fa-drumstick-bite"
  },
  {
    title: "Flaky, Golden Crusts",
    description: "Master techniques for that perfect crunch every time.",
    icon: "fas fa-bread-slice"
  },
  {
    title: "Culinary Creativity",
    description: "Get inspired with seasonal twists and fusion ideas that keep your pies exciting.",
    icon: "fas fa-utensils"
  }
];

const featuredPie = {
  name: "Spicy Chorizo & Pepper Pie",
  description: "A fiery explosion of chorizo, roasted bell peppers, and spice blends that deliver bold flavors with every bite.",
  image: "spicy-pie"
};

const testimonials = [
  {
    quote: "The techniques taught here transformed my pie game completely!",
    author: "Sarah M., Master Baker"
  },
  {
    quote: "Finally, a resource that understands the passion behind artisanal pies.",
    author: "Michael T., Culinary Chef"
  },
  {
    quote: "Incredible depth of knowledge. I've perfected my signature pie!",
    author: "Jessica L., Pie Enthusiast"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-[#B22222] to-[#8B0000] py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgdmlld0JveD0iMCAwIDYwIDYwIj48Y2lyY2xlIGN4PSIzMCIgY3k9IjMwIiByPSIyIiBmaWxsPSIjRkZENzAwIi8+PC9zdmc+')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Welcome to <span class="text-[#FFD700]">Porky Pie Pros</span>
        </h1>
        <p class="text-xl md:text-2xl text-[#FFD700] mb-10 font-bold">
          Expert Insights into Artisanal Porky Pies
        </p>
        <p class="text-lg text-white max-w-2xl mx-auto mb-12">
          Ignite your passion for pastry with *Porky Pie Pros*, where bold flavors meet energetic innovation in the art of crafting mouthwatering porky pies. Whether you're a home baker or a pro chef, our site is your ultimate guide to elevating your pie game.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-[#FFD700] hover:bg-[#FFA500] text-[#B22222] font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
            Explore Recipes
          </button>
          <button class="bg-transparent border-2 border-white hover:bg-white hover:text-[#B22222] text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300">
            Join Our Community
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#B22222] mb-4">Why Choose Artisanal Porky Pies?</h2>
        <div class="w-24 h-1 bg-[#FFD700] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {features.map((feature, index) => (
          <div 
            key={index} 
            class="bg-white rounded-xl shadow-lg p-8 border border-[#FFD700] hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="text-5xl text-[#B22222] mb-6 flex justify-center">
              <i class={feature.icon}></i>
            </div>
            <h3 class="text-2xl font-bold text-[#B22222] mb-4 text-center">{feature.title}</h3>
            <p class="text-gray-700 text-center">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Pie Section -->
  <section class="py-20 bg-gradient-to-r from-[#1a1a1a] to-[#333333] text-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center">
        <div class="lg:w-1/2 mb-12 lg:mb-0 lg:pr-12">
          <div class="relative">
            <div class="absolute -inset-4 bg-[#B22222] rounded-2xl opacity-20"></div>
            <div class="relative bg-gradient-to-br from-[#B22222] to-[#8B0000] rounded-2xl p-8 border-2 border-[#FFD700]">
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-64 md:h-80 flex items-center justify-center text-gray-500">
                {featuredPie.name} Image
              </div>
            </div>
          </div>
        </div>
        <div class="lg:w-1/2">
          <div class="max-w-lg">
            <span class="inline-block bg-[#FFD700] text-[#B22222] font-bold px-4 py-1 rounded-full mb-4">
              Featured Pie of the Month
            </span>
            <h2 class="text-3xl md:text-4xl font-bold mb-6">{featuredPie.name}</h2>
            <p class="text-xl mb-8">{featuredPie.description}</p>
            <button class="bg-[#FFD700] hover:bg-[#FFA500] text-[#B22222] font-bold py-3 px-8 rounded-full text-lg transition-all duration-300">
              View Recipe
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#B22222] mb-4">What Our Community Says</h2>
        <div class="w-24 h-1 bg-[#FFD700] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-gradient-to-br from-[#FFF8F0] to-[#FFFAF5] rounded-xl p-8 border border-[#FFD700] shadow-md">
            <div class="text-[#FFD700] text-3xl mb-4">
              <i class="fas fa-quote-left"></i>
            </div>
            <p class="text-gray-700 mb-6 italic">"{testimonial.quote}"</p>
            <p class="font-bold text-[#B22222]">â€” {testimonial.author}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#B22222] to-[#8B0000] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Master the Art?</h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto">
        Join thousands of passionate bakers transforming their kitchens into culinary studios.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-[#FFD700] hover:bg-[#FFA500] text-[#B22222] font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
          Start Your Journey
        </button>
        <button class="bg-transparent border-2 border-white hover:bg-white hover:text-[#B22222] text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300">
          View Community
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-in;
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(30px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .feature-card:hover {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
  }
</style>